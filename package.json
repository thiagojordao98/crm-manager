{
  "name": "crm-manager",
  "version": "1.0.0",
  "type": "module",
  "description": "Multi-channel CRM for unified customer communication management",
  "private": true,
  "author": "CRM Manager Team",
  "license": "MIT",
  "workspaces": [
    "apps/frontend",
    "apps/backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w @crm/frontend\" \"npm run dev -w @crm/backend\"",
    "dev:frontend": "npm run dev -w @crm/frontend",
    "dev:backend": "npm run dev -w @crm/backend",
    "build": "npm run build -w @crm/frontend && npm run build -w @crm/backend",
    "build:frontend": "npm run build -w @crm/frontend",
    "build:backend": "npm run build -w @crm/backend",
    "test": "npm run test -w @crm/frontend && npm run test -w @crm/backend",
    "test:frontend": "npm run test -w @crm/frontend",
    "test:backend": "npm run test -w @crm/backend",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "docker:dev": "docker-compose up -d",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:dev:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "migrate": "npm run migrate -w @crm/backend",
    "migrate:create": "npm run migrate:create -w @crm/backend",
    "seed": "npm run seed -w @crm/backend",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
